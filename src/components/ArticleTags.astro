---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2 my-6">
  {tags.map(tag => (
    <a
      href={`/tags/${tag.toLowerCase()}`}
      class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-leaf-50 text-leaf-700 hover:bg-leaf-100 transition-colors"
    >
      <span class="mr-1">#</span>{tag}
    </a>
  ))}
</div>
