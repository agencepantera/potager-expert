---
interface Props {
  title: string;
  subtitle: string;
  image?: string;
}

const { 
  title, 
  subtitle,
  image = "/images/hero-bg.jpg"
} = Astro.props;

import Newsletter from './Newsletter.astro';
---

<section class="relative pt-24 pb-24 overflow-hidden bg-gradient-to-br from-leaf-200 to-leaf-100 mt-16 flex items-center">
  <!-- Fond et textures -->
  <div class="absolute inset-0 bg-gradient-to-br from-leaf-300/50 via-leaf-200/40 to-leaf-100/30"></div>
  <div class="absolute inset-0 opacity-15 bg-texture-soil mix-blend-overlay"></div>
  
  <!-- Contenu -->
  <div class="container mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      <!-- Section principale -->
      <div class="lg:col-span-2 p-8 rounded-2xl bg-leaf-100/70 backdrop-blur-md border border-leaf-400/50 hover:bg-leaf-100/80 transition-all duration-300 shadow-sm">
        <span class="inline-block px-4 py-2 rounded-full bg-leaf-800/15 text-leaf-900 text-sm font-medium mb-6">
          Cultivez votre passion
        </span>
        <h1 class="font-display text-4xl lg:text-5xl font-bold mb-6 text-leaf-950">
          {title}
        </h1>
        <p class="text-lg text-leaf-800 mb-8 leading-relaxed">
          {subtitle}
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="/blog" 
            class="px-6 py-3 bg-gradient-to-r from-leaf-800 to-leaf-700 text-white rounded-xl font-medium shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200"
          >
            Découvrir nos articles
          </a>
        </div>
      </div>

      <!-- Section newsletter -->
      <div class="p-8 rounded-2xl bg-leaf-100/70 backdrop-blur-md border border-leaf-400/50 hover:bg-leaf-100/80 transition-all duration-300 shadow-sm">
        <h2 class="text-xl font-display font-semibold text-leaf-900 mb-3">
          Restez informé
        </h2>
        <p class="text-leaf-700 mb-6 text-sm leading-relaxed">
          Inscrivez-vous à notre newsletter pour recevoir nos meilleurs conseils de jardinage.
        </p>
        <form class="flex flex-col gap-4" action="https://formspree.io/f/xyzyazbv" method="POST">
          <input 
            type="email" 
            name="email" 
            placeholder="Votre email" 
            required
            class="w-full px-4 py-3 bg-white/80 border border-leaf-400 rounded-xl text-leaf-800 placeholder-leaf-500 backdrop-blur-sm focus:outline-none focus:border-leaf-600 focus:bg-white/90 transition-all duration-200"
          />
          <button 
            type="submit"
            class="w-full px-4 py-3 bg-gradient-to-r from-leaf-800 to-leaf-700 text-white rounded-xl font-medium shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200"
          >
            S'inscrire
          </button>
        </form>
      </div>

      <!-- Features -->
      <div class="lg:col-span-3">
        <h2 class="text-2xl font-display font-semibold text-leaf-900 mb-6">Nos services</h2>
        <div class="space-y-4">
          <div class="p-6 rounded-2xl bg-leaf-100/70 backdrop-blur-md border border-leaf-400/50 hover:bg-leaf-100/80 transition-all duration-300 shadow-sm flex items-center">
            <div class="mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-leaf-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
            </div>
            <div>
              <h3 class="text-leaf-900 font-medium mb-1">Guides Pratiques</h3>
              <p class="text-leaf-700 text-sm">Des conseils d'experts pour votre potager</p>
            </div>
          </div>
          <div class="p-6 rounded-2xl bg-leaf-100/70 backdrop-blur-md border border-leaf-400/50 hover:bg-leaf-100/80 transition-all duration-300 shadow-sm flex items-center">
            <div class="mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-leaf-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-leaf-900 font-medium mb-1">Conseils Personnalisés</h3>
              <p class="text-leaf-700 text-sm">Adaptés à votre niveau et vos besoins</p>
            </div>
          </div>
          <div class="p-6 rounded-2xl bg-leaf-100/70 backdrop-blur-md border border-leaf-400/50 hover:bg-leaf-100/80 transition-all duration-300 shadow-sm flex items-center">
            <div class="mr-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-leaf-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-leaf-900 font-medium mb-1">Contenu Régulier</h3>
              <p class="text-leaf-700 text-sm">Nouveaux articles chaque semaine</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slide-up {
    0% {
      transform: translateY(30px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
  }
</style>
